---
const { profile } = Astro.props;
const { title, description } = profile;
const profileImage = '/path/to/profile-image.jpg'; // Replace with the actual path to your profile image
---

<div class="profile-container flex flex-col md:flex-row items-center text-center md:text-left py-12 px-10 max-w-7xl mx-auto box-border">
    <div class="flex-shrink-0 w-full md:w-auto flex justify-center md:justify-start mb-4 md:mb-0">
        <div class="w-32 h-32 md:w-48 md:h-48 bg-black"></div>
    </div>
    <div class="flex-grow flex flex-col justify-center items-center md:items-start pl-20 h-32 md:h-48">
        <div class="w-full pl-8 p-4 h-full flex flex-col justify-center items-center bg-[#373D4D]">
            <h1 class="heading mb-2 text-center font-semibold ">{title}</h1>
            <p class="description text-center">{description}</p>
        </div>
    </div>
</div>