---


import Header from "../components/Header.astro"
interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const { title, description = "Default text", image = "/images/test.jpg"} = Astro.props
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={ image } />

		<title>Astro Basics</title>
	</head>
	<body class="min-h-screen" style ="background-color: #ffffff";>
		<Header />
		<section class="min-h-screen" style="background-color: #1F232C;">
			<slot name="section1" />
		</section>
		<section class="min-h-screen" style="background-color: #0D0F13;">
			<slot name="section2" />
		</section>
		<section class="min-h-screen" style="background-color: #1F232C;">
			<slot name="section3" />
		</section>
		<section class="min-h-screen" style="background-color: #0D0F13;">
			<slot name="section4" />
		</section>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
